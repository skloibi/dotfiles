[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python $HOME/.config/polybar/polybar-spotify/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954

[module/filesystem]
type = internal/fs
