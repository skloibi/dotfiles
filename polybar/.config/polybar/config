foreground = #FFFFFF
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR}
width = 100%
height = 18
offset-x = 2
offset-y = 2
radius = 6.0
fixed-center = true

bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

